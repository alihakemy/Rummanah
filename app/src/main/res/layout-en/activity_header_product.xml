<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ActionBarTitle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layoutDirection="ltr"
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/MenuButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:contentDescription="@string/app_name"
        android:onClick="gotoBack"
        android:padding="10dp"
        android:src="@mipmap/cancel" />

    <TextView
        android:id="@+id/MainTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/MenuButton"
        android:layout_toRightOf="@+id/LeftSide"
        android:layout_centerVertical="true"
        android:drawablePadding="5dp"
        android:text=""
        android:textColor="#000"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/LeftSide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/Search"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:onClick="gotoShare"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/app_name"
            android:paddingTop="5dp"
            android:src="@mipmap/ic_share" />

        <FrameLayout
            android:id="@+id/CartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Search"
            android:layout_centerVertical="true"
            android:onClick="gotoCart">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingRight="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/green_shopping_cart" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_CartNum"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="right|top"
                android:background="@drawable/btn_blue_radius50"
                android:ellipsize="start"
                android:gravity="center"
                android:text="0"
                android:textColor="#fff"
                android:textSize="12sp"
                android:textStyle="bold" />
        </FrameLayout>
    </RelativeLayout>


</RelativeLayout>
